<%- include('includes/head.ejs') %>
</head>
<body>
    <%- include('includes/navigation.ejs') %>
    <main class="contactPage">
        <div class="container">
            <% if(novelId != null){ %>
            <h1>Zgłaszanie opowiadania</h1>
            <form method="post" action="/contact/<%= novelId %>/1">
                <label for="topic">Temat: </label>
                <input type="text" disabled value="Zgłaszanie opowiadania(ID: <%= novelId %>)">
                <label for="message">Treść zgłoszenia:</label>
                <textarea name="message" id="message" cols="30" rows="10" required></textarea>
                <input type="submit" value="Wyślij zgłoszenie" class="submit">
            </form>

            <% } else { %>
            <h1>Formularz kontaktowy</h1>
            <form method="post" action="/send/<%= novelId %>">
                <label for="topic">Temat: </label>
                <select name="topic" id="topic" required>
                    <option value="">Wybierz temat</option>
                    <option value="2">Współpraca</option>
                    <option value="3">Zgłaszanie błędu</option>
                    <option value="4">Inne</option>
                </select>
                
                <label for="message">Treść wiadomości:</label>
                <textarea name="message" id="message" cols="30" rows="10" required></textarea>
                <input type="submit" value="Wyślij wiadomość" class="submit">
            </form>
            <% } %>
        </div>
    </main>
    <%- include('includes/footer.ejs') %>


