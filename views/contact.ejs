<%- include('includes/head.ejs') %>
</head>
<body class="d-flex flex-column min-vh-100">
<%- include('includes/navigation.ejs') %>
<main>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center my-5">Kontakt</h1>
                <% if(novelId != null){ %>
                <form method="post" action="/contact/<%= novelId %>/1">
                    <p>
                        <label for="">Temat</label>
                        <select disabled id="" class="form-control">
                            <option selected name="novelId" value="<%= novelId %>" label="Zgłoszenie opowiadania(ID: <%= novelId %>)"></option>
                        </select>
                    </p>
                    <p>
                        <label for="message">Wiadomość</label>
                        <textarea name="message" id="message" class="form-control"></textarea>
                    </p>
    
                    <p>
                        <button class="btn btn-primary">Zgłoś</button>
                    </p>
                </form>
                <% } else { %>
                    <form method="post" action="/send/<%= novelId %>">
                        <p>
                            <label for="">Temat</label>
                            <select name="topic" id="" class="form-control">
                                <option value="">Wybierz temat</option>
                                <option value="2" label="Wspólpraca"></option>
                                <option value="2" label="Zgłoszenie błędu"></option>
                                <option value="4" label="Inny"></option>
                            </select>
                        </p>
                        <p>
                            <label for="message">Wiadomość</label>
                            <textarea name="message" id="message" class="form-control"></textarea>
                        </p>
        
                        <p>
                            <button class="btn btn-primary">Wyślij wiadmość</button>
                        </p>
                    </form>
                <% } %>
            </div>
        </div>
    </div>

</main>
<%- include('includes/footer.ejs') %>


