<body class="d-flex flex-column min-vh-100">
<%- include('includes/navigation.ejs') %>
<main>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center my-5">Nowe Opowiadanie</h1>
                <div style="display:inline;">
                    <datalist id="novelNames">
                        <option>Nowe Opowiadanie</option>
                    </datalist>
                    <input id="novelInput" autoComplete="on" list="novelNames"/> 
                    <datalist id="novelTitles"></datalist>
                    <input id="chapterInput" autoComplete="on" list="novelTitles"/> 
                </div>
                <input id="titleField" placeholder="Tytuł" style="color:rgb(113, 90, 90)"/>
                <button id="resetChapter">resetuj zmiany</button>
                <div id="textField" class="editable" style="color:rgb(0, 0, 0);background-color: white;"></div>
                <div style="display:inline;">
                    <!-- <input id="userField" placeholder="Id użytokwnika"/> -->
                    <button id="publish">Zapisz</button>
                    <!-- <button id="test">Testuj</button> -->
                    <input id="public" type="checkbox" name="public" value="yes">
                    <span style="color: white;">Opublikuj</span> 
                </div>
            </div>
        </div>
    </div>

</main>
<script src="js/medium-editor.js"></script>
<script type="module" src="js/post.js"></script>
<script type="module" src="js/add.js"></script>
